	&lt;code&gt;&amp;lt;img src=&quot;/images/&lt;small&gt;IMAGENAME.EXTENSION&lt;/small&gt;&quot; alt=&quot;&lt;small&gt;ALT TEXT&lt;/small&gt;&quot; width=&quot;88&quot; height=&quot;31&quot; style=&quot;min-width:88px;max-height:31px;&quot;&amp;gt;&lt;/code&gt;
